    <div class="container">

      <h1>Calculate Security Question Hash</h1>
      <p>Enter your salt, security answer and click generate to get your sha1 hash.</p>

      <!-- send any possible form post to a local server so that salt and answers don't get stolen -->
      <form id="calc-form" action="https://localhost:80" method="post">
          <p>
          <label for="salt">Salt</label>
          <input type="text" id="salt" name="salt" autocomplete="false" />
          </p>
          <p>
          <label for="answer">Answer</label>
          <input type="text" id="answer" name="answer" autocomplete="false" />
          </p>
          <p>
          <label for="digits">Number of Digits</label>
          <input type="text" id="digits" name="digits" />
          </p>
          <p>
          <input type="submit" value="Generate Hash" id="calculate" />
          <input type="reset" value="Clear Form" id="clear" />
          </p>
          <p>
          <label for="hash">Hexdigest Hash</label>
          <input type="text" id="hash" name="hash" />
          </p>
      </form>

    </div> <!-- /container -->

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
